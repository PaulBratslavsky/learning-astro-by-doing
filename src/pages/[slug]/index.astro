// Server-side code runs on build time
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
  const pages = [
    {
      name: "Articles",
      path: "/articles",
    },

    {
      name: "Projects",
      path: "/projects",
    },
    {
      name: "Speaking",
      path: "/speaking",
    },
  ];

  function createStaticPaths(pages: any[]) {
    const data = pages.map((page) => ({
      params: { slug: page.path },
      props: page,
    }));

    return data;
  }

  return createStaticPaths(pages);
}

